<%- include('partials/header') %>

<script src="https://cdn.ckeditor.com/4.22.1/standard/ckeditor.js"></script>

<div class="container" style="padding: 50px 20px; max-width: 900px;">
    <h1>âœï¸ Modifier l'article</h1>
    
    <form action="/admin/blog/edit/<%= article._id %>" method="POST" style="background: white; padding: 30px; border-radius: 15px; box-shadow: 0 5px 15px rgba(0,0,0,0.1);">
        
        <div class="input-group">
            <label>Titre de l'article</label>
            <input type="text" name="title" value="<%= article.title %>" required>
        </div>

        <div class="input-group">
            <label>Image de couverture</label>
            <input type="text" name="image" value="<%= article.image %>" required>
        </div>

        <div class="input-group">
            <label>Contenu</label>
            <textarea name="content"><%= article.content %></textarea>
        </div>

        <div style="display: flex; gap: 10px; margin-top: 20px;">
            <button type="submit" class="btn-login" style="flex: 1; background: var(--secondary);">ğŸ’¾ Sauvegarder les modifications</button>
            <a href="/admin/blog" class="btn-login" style="background: #666; text-align: center;">Annuler</a>
        </div>
    </form>
</div>

<script>
    CKEDITOR.replace( 'content' );
</script>

<%- include('partials/footer') %>