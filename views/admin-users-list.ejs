<%- include('partials/header') %>

<div class="container" style="padding: 50px 20px;">
    
    <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 30px;">
        <h1>üë• Annuaire Clients</h1>
        <a href="/admin" class="btn-login" style="background: #666;">‚Üê Retour Admin</a>
    </div>

    <div style="background: white; border-radius: 15px; overflow: hidden; box-shadow: 0 5px 15px rgba(0,0,0,0.05);">
        <table style="width: 100%; border-collapse: collapse;">
            <thead style="background: #333; color: white;">
                <tr>
                    <th style="padding: 15px; text-align: left;">Nom</th>
                    <th style="padding: 15px; text-align: left;">Email</th>
                    <th style="padding: 15px; text-align: left;">Type</th>
                    <th style="padding: 15px; text-align: right;">Action</th>
                </tr>
            </thead>
            <tbody>
                <% if (users.length === 0) { %>
                    <tr><td colspan="4" style="padding: 20px; text-align: center;">Aucun client inscrit.</td></tr>
                <% } else { %>
                    <% users.forEach(u => { %>
                        <tr style="border-bottom: 1px solid #eee;">
                            <td style="padding: 15px; font-weight: bold;"><%= u.name %></td>
                            <td style="padding: 15px; color: #666;"><%= u.email %></td>
                            <td style="padding: 15px;">
                                <% if(u.role === 'pro') { %>
                                    <span style="background: #17a2b8; color: white; padding: 2px 8px; border-radius: 4px; font-size: 0.8rem;">PRO</span>
                                <% } else { %>
                                    <span style="background: #eee; color: #555; padding: 2px 8px; border-radius: 4px; font-size: 0.8rem;">Particulier</span>
                                <% } %>
                            </td>
                            <td style="padding: 15px; text-align: right;">
                                <a href="/admin/users/<%= u._id %>" class="btn-login" style="padding: 5px 15px; font-size: 0.9rem;">üë§ Voir Profil</a>
                            </td>
                        </tr>
                    <% }) %>
                <% } %>
            </tbody>
        </table>
    </div>
</div>

<%- include('partials/footer') %>