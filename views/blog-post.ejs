<%- include('partials/header') %>

<div style="height: 400px; overflow: hidden; position: relative;">
    <img src="/img/<%= article.image %>" style="width: 100%; height: 100%; object-fit: cover;">
    <div style="position: absolute; bottom: 0; left: 0; width: 100%; background: linear-gradient(transparent, black); padding: 50px 20px; color: white;">
        <div class="container">
            <h1 style="font-size: 3rem; margin: 0;"><%= article.title %></h1>
            <p>Publié le <%= new Date(article.createdAt).toLocaleDateString() %> par <%= article.author %></p>
        </div>
    </div>
</div>

<div class="container" style="padding: 50px 20px; max-width: 800px; line-height: 1.8; font-size: 1.1rem; color: #333;">
    <%- article.content %>
    
    <div style="margin-top: 50px; text-align: center;">
        <a href="/blog" class="btn-login" style="background: #666;">← Retour aux articles</a>
    </div>
</div>

<%- include('partials/footer') %>