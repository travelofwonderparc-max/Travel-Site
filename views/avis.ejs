<%- include('partials/header') %>

<div class="container" style="padding: 60px 20px;">
    
    <div style="text-align: center; margin-bottom: 60px;">
        <h1 class="section-title">Plus de 90% de <span>satisfaction Séjour</span></h1>
        <p style="font-size: 1.2rem; color: #666; margin-top: 10px;">Vos retours sont notre plus belle récompense.</p>
        <img src="/img/travel.png" alt="Logo" style="width: 80px; opacity: 0.5; margin-top: 20px;">
    </div>

    <div class="avis-grid">
        <% avis.forEach(client => { %>
            <div class="avis-card">
                
                <p class="avis-text">"<%= client.commentaire %>"</p>
                
                <hr style="border: 0; border-top: 1px solid #eee; margin: 20px 0;">

                <p class="avis-trip"><%= client.sejour %></p>

                <div class="stars">
                    <% for(let i=0; i<client.note; i++) { %>
                        ★
                    <% } %>
                </div>

                <h3 class="avis-name"><%= client.nom %></h3>
                
            </div>
        <% }) %>
    </div>

</div>

<%- include('partials/footer') %>